<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF5722"
    android:baselineAligned="false">

    <Button
        android:id="@+id/breakfast"
        android:layout_width="151dp"
        android:layout_height="64dp"
        android:layout_marginTop="64dp"
        android:text="Breakfast"
        app:layout_constraintBottom_toTopOf="@+id/snack1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/snack1"
        android:layout_width="151dp"
        android:layout_height="64dp"
        android:text="Snack"
        app:layout_constraintBottom_toTopOf="@+id/lunch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/breakfast" />

    <Button
        android:id="@+id/lunch"
        android:layout_width="151dp"
        android:layout_height="64dp"
        android:text="Lunch"
        app:layout_constraintBottom_toTopOf="@+id/snack2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/snack1" />

    <Button
        android:id="@+id/snack2"
        android:layout_width="151dp"
        android:layout_height="64dp"
        android:text="Snack"
        app:layout_constraintBottom_toTopOf="@+id/dinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lunch" />

    <Button
        android:id="@+id/dinner"
        android:layout_width="151dp"
        android:layout_height="64dp"
        android:layout_marginBottom="25dp"
        android:text="Dinner"
        app:layout_constraintBottom_toTopOf="@+id/calories"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/snack2" />

    <Button
        android:id="@+id/view"
        android:layout_width="151dp"
        android:layout_height="64dp"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="85dp"
        android:text="View"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calories" />

    <TextView
        android:id="@+id/calories"
        android:layout_width="217dp"
        android:layout_height="73dp"
        android:layout_marginTop="25dp"
        android:text="Calories gained today:"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dinner" />

</androidx.constraintlayout.widget.ConstraintLayout>