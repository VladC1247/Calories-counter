<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/breakfast">

    <Button
        android:id="@+id/add"
        android:layout_width="125dp"
        android:layout_height="75dp"
        android:text="@string/add"
        app:layout_constraintBottom_toBottomOf="@+id/finish"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/finish"
        app:layout_constraintTop_toTopOf="@+id/finish" />

    <Button
        android:id="@+id/food"
        android:layout_width="125dp"
        android:layout_height="75dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="150dp"
        android:text="@string/food"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/drinks"
        android:layout_width="125dp"
        android:layout_height="75dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:text="@string/drinks"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/food" />

    <Button
        android:id="@+id/finish"
        android:layout_width="125dp"
        android:layout_height="75dp"
        android:layout_marginTop="250dp"
        android:text="@string/finish"
        app:layout_constraintEnd_toEndOf="@+id/drinks"
        app:layout_constraintStart_toStartOf="@+id/drinks"
        app:layout_constraintTop_toBottomOf="@+id/drinks" />

</androidx.constraintlayout.widget.ConstraintLayout>